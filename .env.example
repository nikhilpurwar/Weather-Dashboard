# Environment Variables Template
# Copy this file to .env.local for local development
# Add these variables to Vercel dashboard for production

# Weather API Configuration
# VITE_WEATHER_API_BASE_URL=https://api.open-meteo.com/v1/forecast
VITE_WEATHER_API_BASE_URL=https://archive-api.open-meteo.com/v1/archive?latitude=52.52&longitude=13.41&start_date=2025-07-18&end_date=2025-08-01&hourly=temperature_2m 

# Debug Mode (set to false for production)
VITE_DEBUG=false

# Optional: Custom API timeout (in milliseconds)
VITE_API_TIMEOUT=10000

# Optional: Cache TTL (in minutes)
VITE_CACHE_TTL=60
